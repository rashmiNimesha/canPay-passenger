<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_white_background"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/button_blue"/>

    <!-- Progress Bar (Steps) -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:layout_marginBottom="35dp">

<View
    android:layout_width="0dp"
    android:layout_height="6dp"
    android:layout_weight="1"
    android:background="@drawable/progress_active"/>

<View
    android:layout_width="0dp"
    android:layout_height="6dp"
    android:layout_weight="1"
    android:background="@drawable/progress_active"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"/>

<View
    android:layout_width="0dp"
    android:layout_height="6dp"
    android:layout_weight="1"
    android:background="@drawable/progress_inactive"
    android:layout_marginEnd="8dp"/>

<View
    android:layout_width="0dp"
    android:layout_height="6dp"
    android:layout_weight="1"
    android:background="@drawable/progress_inactive"/>
</LinearLayout>

    <!-- Title -->
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Whatâ€™s your NIC number?"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="#23233C"
android:layout_marginBottom="8dp"/>

    <!-- Subtitle -->
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="We need it to verify your identity."
android:textSize="16sp"
android:textColor="#888888"
android:layout_marginBottom="32dp"/>

    <!-- Label -->
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Your NIC Number"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="#23233C"
android:layout_marginBottom="8dp"/>

    <!-- NIC Input -->
<EditText
android:id="@+id/et_nic"
android:layout_width="match_parent"
android:layout_height="56dp"
android:background="@drawable/edittext_outline"
android:hint="Enter your NIC"
android:textSize="16sp"
android:paddingStart="16dp"
android:paddingEnd="16dp"
android:inputType="text"
android:layout_marginBottom="32dp"/>

    <!-- Next Button -->
<Button
android:id="@+id/btn_next"
android:layout_width="match_parent"
android:layout_height="56dp"
android:text="NEXT"
android:textAllCaps="true"
android:textColor="@android:color/white"
android:textStyle="bold"
android:background="@drawable/rounded_button"/>
    </LinearLayout>
