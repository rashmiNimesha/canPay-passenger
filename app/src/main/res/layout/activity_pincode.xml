<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    android:padding="24dp">

    <!-- Back Arrow Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back_circle_bg"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        android:layout_gravity="start"
        android:scaleType="center"
        app:tint="@color/button_blue"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new 4-digit PIN"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep your account safe and secure."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <!-- PIN Boxes -->
    <LinearLayout
        android:id="@+id/pin_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/pin1"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin2"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin4"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <!-- Enter Button -->
    <Button
        android:id="@+id/btn_enter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ENTER"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="16sp"/>
</LinearLayout>
