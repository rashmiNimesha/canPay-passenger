<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splash_blue">

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_white_background"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:tint="@color/button_blue"/>

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:layout_margin="24dp"
        android:padding="24dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/canpay_logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/tv_payment_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Successful!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#23233C"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tv_paid_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LKR 970.00"
            android:textSize="18sp"
            android:textColor="#23233C"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor / Operator"
                android:textColor="#888888"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_conductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gamage"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number"
                android:textColor="#888888"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_bus_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ND - 1234"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Route"
                android:textColor="#888888"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_bus_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matara - Makumbura"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:textColor="#888888"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 June 2025 - 10.30 AM"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Go Home Button -->
    <Button
        android:id="@+id/btn_go_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="GO HOME"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"/>
</RelativeLayout>
