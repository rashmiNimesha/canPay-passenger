<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_white_background"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back_button"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        app:tint="@color/button_blue" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_recharge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add 970.00 LKR to your wallet?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#23233C"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_gray_bg"
        android:padding="20dp"
        android:layout_marginBottom="32dp">

        <!-- From -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="#888888"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456890 - Bank of Ceylon"
            android:textStyle="bold"
            android:textColor="#23233C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- To -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="#888888"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My CanPay Wallet"
            android:textStyle="bold"
            android:textColor="#23233C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Date & Time -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textColor="#888888"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02 June 2025 - 10.30 AM"
            android:textStyle="bold"
            android:textColor="#23233C"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Instruction -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please move the slider from left to right to confirm the payment."
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CLICK TO RECHARGE"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="24dp"/>


</LinearLayout>