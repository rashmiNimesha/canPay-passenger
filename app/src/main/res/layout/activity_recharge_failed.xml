<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    android:padding="0dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/canpay_logo_blue"
        android:contentDescription="@string/app_name"/>

    <!-- Failed Icon -->
    <ImageView
        android:id="@+id/iv_failed_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_payment_failed"
        android:contentDescription="@null"/>

    <!-- Recharge Failed Text -->
    <TextView
        android:id="@+id/tv_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recharge Failed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#23233C"
        android:layout_marginTop="80dp"/>

    <!-- Reason Text -->
    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please check your bank account balance or try again."
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="GO BACK"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
