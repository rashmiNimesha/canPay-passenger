<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/screen_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_back_circle_bg"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:layout_gravity="start"
                android:scaleType="center"
                app:tint="@color/button_blue"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Bank Account"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#23233C"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"/>/>
        </RelativeLayout>

        <!-- Main Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your bank account"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#23233C"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll use this to securely recharge your virtual wallet."
            android:textSize="15sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp"/>

        <!-- Bank Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#23233C"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_bank"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_outline_selector"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Account Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account number"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#23233C"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_outline_selector"
            android:hint="Enter account number"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <!-- Account Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#23233C"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_account_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_outline_selector"
            android:hint="Enter account name"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="32dp"/>

        <!-- Add Button -->
        <Button
            android:id="@+id/btn_add_account"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ADD BANK ACCOUNT"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</ScrollView>
