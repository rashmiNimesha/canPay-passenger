<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/rounded_white_bg"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_notification_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_blue"
        android:background="@drawable/circle_white_background"
        android:contentDescription="@null"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Received"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#23233C"/>

        <TextView
            android:id="@+id/tv_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 18, 2024"
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_unread_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_blue_dot"
        android:layout_marginStart="8dp"
        android:contentDescription="@null"/>
</LinearLayout>
